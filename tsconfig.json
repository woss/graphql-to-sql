{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["es5", "es6", "dom", "es2015", "es2017", "esnext.asynciterable"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "esnext",
    "outDir": "dist"
  },

  "exclude": ["node_modules", "dist", "src/__tests__"],
  "include": ["src/**/*", "typings/**/*"]
}
