{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["es5", "es6", "dom", "es2015", "es2017", "esnext.asynciterable"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "esnext"
  },
  "rootDir": "src",
  "outDir": ".build",
  "exclude": ["node_modules", "!node_modules/@types"],
  "include": ["src/**/*", "typings/**/*"]
}
