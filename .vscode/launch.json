{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "args": ["src/index.ts"],
      "runtimeArgs": [
        "--inspect=33232",
        "--watch",
        "src/index.ts",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "restart": true,

      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector"
    }
  ]
}
